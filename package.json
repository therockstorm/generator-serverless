{
  "name": "@therockstorm/generator-serverless",
  "version": "1.6.1",
  "description": "Yeoman generator for Serverless functions.",
  "keywords": [
    "yeoman-generator"
  ],
  "homepage": "https://github.com/therockstorm/generator-serverless#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/generator-serverless/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/generator-serverless.git"
  },
  "scripts": {
    "format": "prettier --write '{test/**/,generators/app/}*.js'",
    "lint": "standard --fix",
    "pretest": "yarn format && yarn lint",
    "pub": "yarn publish",
    "test": "mocha",
    "watch": "yarn test -- --watch"
  },
  "dependencies": {
    "yeoman-generator": "^4.12.0"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "just-extend": "^4.1.1",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "standard": "^16.0.3",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{test/**/,generators/app/}*.js": [
      "prettier --write",
      "standard --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "**/templates"
    ]
  }
}
