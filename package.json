{
  "name": "@therockstorm/generator-serverless",
  "version": "1.0.4",
  "description": "Yeoman generator for Serverless Node.js functions.",
  "keywords": [
    "yeoman-generator"
  ],
  "homepage": "https://github.com/therockstorm/generator-serverless#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/generator-serverless/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/generator-serverless.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --write '{test/**/,generators/app/}*.js'",
    "lint": "standard --fix",
    "pretest": "npm run format && npm run lint",
    "test": "mocha",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.5"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "prettier": "^1.12.1",
    "standard": "^11.0.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.7.2"
  },
  "lint-staged": {
    "{test/**/,generators/app/}*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "**/templates"
    ]
  }
}
