{
  "name": "<%= serviceName %>",
  "version": "1.0.0",
  "scripts": {
    "build": "serverless webpack",
    "build:docker": "npm run build && cp Dockerfile .dockerignore dist/service",
    "clean": "rm -rf dist",
    "deploy": "npm test && serverless deploy --verbose",
    "deploy:docker": "npm run test && npm run build:docker && cd dist/service && node ../../node_modules/.bin/docker-cli publish <%= dockerNamespace %>/${npm_package_name} --tag $(git rev-parse HEAD)",
    "format": "prettier --write '{,!(dist|.serverless|.webpack)/**/}*.+(js|jsx|ts|tsx|json|yml|yaml|md|html|css|less|scss|graphql)'",
    "lint": "standard --fix",
    "start": "npm run build && cd dist/service && node server.js",
    "pretest": "npm run format && npm run lint",
    "test": "ENVIRONMENT=test mocha",
    "verify": "npm run deploy -- --noDeploy",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^2.1.0"
  },
  "devDependencies": {
    "@therockstorm/docker-cli": "^1.0.6",
    "husky": "^1.1.4",
    "lint-staged": "^8.5.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "serverless": "^1.33.1",
    "serverless-webpack": "^5.2.0",
    "standard": "^12.0.1",
    "webpack": "^4.25.1",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{jsx,ts,tsx,json,yml,yaml,md,html,css,less,scss,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "it"
    ]
  }
}
