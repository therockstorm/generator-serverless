{
  "name": "<%= serviceName %>",
  "version": "1.0.0",
  "scripts": {
    "build": "serverless webpack",
    "deploy": "npm test && serverless deploy --verbose",
    "format": "prettier --write '{,!(.serverless|.webpack)/**/}*.+(js|jsx|ts|tsx|json|yml|yaml|md|html|css|less|scss|graphql)'",
    "invoke": "ENVIRONMENT=local sls invoke local -f func",
    "test": "jest",
    "watch": "npm test -- --watch",
    "verify": "npm run deploy -- --noDeploy"
  },
  "dependencies": {
    "@therockstorm/utils": "^2.1.0",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.15",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.7",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "serverless": "^1.33.1",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yml,yaml,md,html,css,less,scss,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
