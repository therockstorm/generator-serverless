{
  "name": "<%= serviceName %>",
  "version": "1.0.0",
  "scripts": {
    "build": "serverless webpack",
    "deploy": "npm test && serverless deploy --verbose",
    "format": "prettier --write '{,!(.serverless|.webpack)/**/}*.+(js|json|md|ts|yml)'",
    "invoke": "ENVIRONMENT=local sls invoke local -f func",
    "test": "jest",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^2.1.0",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.13",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.2",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "serverless": "^1.32.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "=23.10.2",
    "ts-loader": "^5.2.1",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
