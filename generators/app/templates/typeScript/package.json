{
  "name": "<%= serviceName %>",
  "version": "1.0.0",
  "scripts": {
    "build": "serverless webpack",
    "clean": "find src scripts -type f -name '*.js' -delete",
    "deploy": "npm test && serverless deploy --verbose",
    "format": "prettier --write '{,!(.serverless|.webpack)/**/}*.+(js|jsx|ts|tsx|json|yml|yaml|md|html|css|less|scss|graphql)'",
    "invoke": "ENVIRONMENT=local sls invoke local --function func",
    "lint": "tslint './**/*.ts' --exclude './node_modules/**/*.ts' --fix",
    "jest": "ENVIRONMENT=test jest",
    "test": "npm run lint && npm run jest && serverless package",
    "watch": "npm run jest -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^3.0.3",
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.19",
    "@types/jest": "^24.0.4",
    "@types/node": "^11.9.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "serverless": "^1.37.1",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,yml,yaml,md,html,css,less,scss,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
