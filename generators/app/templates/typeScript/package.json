{
  "name": "<%= serviceName %>",
  "version": "1.0.0",
  "scripts": {
    "build": "serverless webpack",
    "precommit": "lint-staged",
    "deploy": "npm test && serverless deploy --verbose",
    "format": "prettier --write '{,!(.serverless|.webpack)/**/}*.+(js|json|md|ts|yml)'",
    "invoke": "ENVIRONMENT=local sls invoke local -f func",
    "test": "jest",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^2.1.0",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.13",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.10.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "serverless": "^1.32.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "=23.1.4",
    "ts-loader": "^5.1.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,ts,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
